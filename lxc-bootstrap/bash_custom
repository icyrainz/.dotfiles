# --- Custom ---
# Add local bin to PATH
export PATH="$HOME/.local/bin:$PATH"

# fzf integration (Ctrl+R: history, Ctrl+T: files, Alt+C: cd)
eval "$(fzf --bash)"

# fzf customizations
export FZF_DEFAULT_OPTS="--height 40% --layout reverse --border"
export FZF_CTRL_T_OPTS="--preview 'batcat --color=always {}' --preview-window '~3'"
export FZF_ALT_C_OPTS="--preview 'ls -la {}'"

alias c='clear'
alias q='exit'
alias ..='cd ..'
alias ...='cd ../..'

alias v='nvim'
export EDITOR=nvim

alias rg='rg --smart-case'
alias t='tmux attach || tmux new-session'
alias bat='batcat'

alias d='docker'
alias dc='docker compose'
alias dcup='docker compose pull && docker compose down && docker compose up -d'
alias dcre='docker compose down && docker compose up -d'
alias dps='docker ps --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}"'
alias dlogs='docker logs -f'
alias lzd='lazydocker'
